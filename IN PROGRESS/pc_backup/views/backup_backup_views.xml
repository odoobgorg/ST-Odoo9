<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>                    
    
      <record id="backup_backup_view_form" model="ir.ui.view">
          <field name="name">backup.backup.form.view</field>
          <field name="model">backup.backup</field>
          <field name="arch" type="xml">
      	      <form create="false">
      	          <sheet>    
      	              <group>
      	                  <field name="user_id"/>
          	          <field name="backup_file"/>
          	      </group>
      	          </sheet>
      	      </form>
      	  </field>
      </record>

      <record id="website_support_ticket_view_tree" model="ir.ui.view">
          <field name="name">backup.backup.tree.view</field>
          <field name="model">backup.backup</field>
          <field name="arch" type="xml">
      	      <tree>
      	          <field name="user_id"/>
      	          <field name="backup_file"/>
      	      </tree>
      	  </field>
      </record>

      <record id="backup_backup_action" model="ir.actions.act_window">
          <field name="name">backup.backup.action</field>
	  <field name="res_model">backup.backup</field>
	  <field name="view_mode">tree,form</field>
	  <field name="help" type="html">
	      <p>
	          No backups found
	      </p>
          </field>
      </record>

      <menuitem id="backup_backup_parent_menu" name="Backup" parent="base.menu_administration" sequence="90"/>
      <menuitem id="backup_backup_menu" name="Backups" parent="backup_backup_parent_menu" action="backup_backup_action" sequence="10"/>
 
    </data>
</openerp>